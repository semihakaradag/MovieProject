<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - Movie Project</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    @* Koşullu gösterim için değişkeni tanımlıyoruz *@
    @{
        bool showGenres = ViewBag.ShowGenres ?? true; // Varsayılan olarak true
    }
    @if (showGenres)
    {

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container h-100">
            <!-- h-100 ile tam yükseklik -->
            <div class="row h-100 justify-content-center align-items-center">
                 
                <!-- Dikey ve yatay merkezleme -->
                @if (ViewBag.Genres != null)
                {
                    
                
                   @foreach (var genre in ViewBag.Genres)
                  {
                    <div class="col-6 d-flex justify-content-center mb-2">
                        <a href="#" class="btn btn-info btn-block" onclick="filterMoviesByGenre(@genre.GenreId)">
                            @genre.GenreName
                        </a>
                    </div>
                  }
                }
                else
                {
                    <p>Tür bilgisi bulunamadı.</p>
                }
            
            </div>
        </div>
    </nav>
    }

    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <!-- Zorunlu olmayan Scripts section'ını ekliyoruz -->
    @RenderSection("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
